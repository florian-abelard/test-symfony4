{% extends 'base.html.twig' %}

{% block title %}
    Hello {{ name }}
{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    Hello {{ name }}

    <br/>
    <br/>

    {{ 'foo'|capitalize|reverse }} {# "Oof" #}

    <br/>
    <br/>

    {% for i in range(1, 10) %}
        {{ i }}
    {% endfor %}

    <br/>
    <br/>

    {% set fruits = ['pomme', 'poire', 'abricot'] %}
    {{ fruits | last }}<br/>
    {{ fruits.1 }}
    <br/>
    {% set product = {
        'label': 'Pomme bio du jardin extraordinaire',
        'price': 4
    } %}
    {{ product.label }}


</div>
{% endblock %}
